{
  "name": "vladstudio-projects",
  "displayName": "Projects",
  "description": "Quick project switcher",
  "version": "0.1.0",
  "publisher": "vladstudio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vladstudio/vscode-projects"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "icon": "icon/workspaces-color.png",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "projects",
          "title": "Projects",
          "icon": "icon/workspaces.svg"
        }
      ]
    },
    "views": {
      "projects": [
        {
          "id": "projectsView",
          "name": "Projects"
        }
      ]
    },
    "commands": [
      {
        "command": "projects.addFolder",
        "title": "Projects: Add Folder",
        "icon": "$(add)"
      },
      {
        "command": "projects.removeFolder",
        "title": "Remove"
      },
      {
        "command": "projects.openFolder",
        "title": "Open Project"
      },
      {
        "command": "projects.openPicker",
        "title": "Projects: Open Picker"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "projects.addFolder",
          "when": "view == projectsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "projects.addFolder",
          "when": "view == projectsView"
        },
        {
          "command": "projects.removeFolder",
          "when": "view == projectsView"
        }
      ]
    },
    "keybindings": [
      {
        "command": "projects.openPicker",
        "key": "ctrl+alt+w",
        "mac": "cmd+alt+w"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
